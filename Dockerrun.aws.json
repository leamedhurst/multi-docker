{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name":"client",
            "image":"leamedhurst/multi-client",
            "hostname":"client",
            "essential": false
        },
        {
            "name":"server",
            "image":"leamedhurst/multi-server",
            "hostname":"api",
            "essential": false
        },
        {
            "name":"worker",
            "image":"leamedhurst/multi-worker",
            "hostname":"worker",
            "essential": false
        },
        {
            "name":"nginx",
            "image":"leamedhurst/multi-nginx",
            "essential": true,
            "portMappings":[
                {
                "hostPort": 80,
                "containerPort":80
                }
            ],
            "links": ["client","server"]
        }
    ]
}